<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fullscreen_ads_background_color">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ad_text_wrapper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skip_panel" />






            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ad_text_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/fullscreen_ads_text_area_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ad_header_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    app:layout_constraintBottom_toTopOf="@id/ad_body">

                    <ImageView
                        android:id="@+id/ad_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Icon for the ad."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry"
                        tools:srcCompat="@drawable/googleg_standard_color_18" />

                    <TextView
                        android:id="@+id/ad_attribution"
                        style="@style/NativeAd.AdAttribution.Light"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/ad_attribution_bg"
                        android:text="@string/ad_attribution"
                        android:textColor="#ffffff"
                        app:layout_constraintStart_toEndOf="@id/ad_icon"
                        app:layout_constraintTop_toBottomOf="@id/ad_secondary"
                        tools:visibility="visible" />

                    <RatingBar
                        android:id="@+id/ad_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:numStars="5"
                        android:paddingBottom="4dp"
                        android:progressBackgroundTint="@color/fullscreen_ads_rating_bar_background_tint"
                        android:progressTint="@color/fullscreen_ads_rating_bar_tint"
                        android:rating="3.2"
                        android:secondaryProgressTint="@color/fullscreen_ads_rating_bar_secondary_tint"
                        android:stepSize="0.1"
                        app:layout_constraintStart_toEndOf="@id/ad_attribution"
                        app:layout_constraintTop_toBottomOf="@id/ad_secondary" />


                    <TextView
                        android:id="@+id/ad_price"
                        style="@style/NativeAd.AdPrice.Light"
                        android:textColor="@color/fullscreen_ads_price_text_color"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@id/ad_rating_bar"
                        app:layout_constraintTop_toTopOf="@id/ad_rating_bar"
                        tools:text="$9.99" />


                    <TextView
                        android:id="@+id/ad_title"
                        style="@style/NativeAd.AdHeadline.Light"
                        android:gravity="start"
                        android:layout_width="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/fullscreen_ads_title_text_color"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/ad_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ad_icon"
                        tools:text="Test Ad : Screws for GAMESIR G8 GALILEO and G8 GALILEO " />

                    <TextView
                        android:id="@+id/ad_secondary"
                        style="@style/NativeAd.AdAdvertiser.Light"
                        android:ellipsize="none"
                        android:paddingHorizontal="8dp"
                        android:singleLine="false"
                        android:textColor="@color/fullscreen_ads_title_secondary_text_color"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/ad_title"
                        app:layout_constraintStart_toEndOf="@id/ad_icon"
                        tools:text="Advertiser Name Could be large" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:id="@+id/ad_body"
                    style="@style/NativeAd.AdBody.Light"
                    android:maxLines="5"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/fullscreen_ads_title_body_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/ad_cta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Google requires 90 characters to be shown fully without truncation. The best unrealistic." />


                <Button
                    android:id="@+id/ad_cta"
                    style="@style/NativeAd.AdButton"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"

                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    android:backgroundTint="@color/fullscreen_ads_cta_neutral_button_tint"
                    android:textColor="@color/fullscreen_ads_cta_neutral_button_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="INSTALL" />

<!--                <View-->
<!--                    android:id="@+id/deadRightBottom"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="64dp"-->
<!--                    android:clickable="true"-->
<!--                    android:focusable="true"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    tools:background="#CCFF0000"-->
<!--                    android:elevation="8dp"-->
<!--                    />-->



            </androidx.constraintlayout.widget.ConstraintLayout>



            <FrameLayout
                android:id="@+id/skip_panel"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/fullscreen_ads_skip_panel_bacground"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="8dp"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/countdown_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:paddingHorizontal="10dp"
                    tools:text="Remaining 5 seconds..."
                    android:textColor="@color/fullscreen_ads_countdown_text_color"
                    android:visibility="visible"
                    />

                <Button
                    android:id="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|end"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="0dp"
                    android:background="@drawable/gnt_skip_fs_neutral"
                    android:text="@string/skip_ads_btn_label"
                    tools:visibility="visible"
                    android:elevation="8dp"
                    android:textColor="@color/fullscreen_ads_skip_neutral_btn_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>







    </com.google.android.gms.ads.nativead.NativeAdView>
</androidx.constraintlayout.widget.ConstraintLayout>