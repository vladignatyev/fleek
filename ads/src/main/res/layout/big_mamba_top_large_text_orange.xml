<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fullscreen_ads_background_color">

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ad_text_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_media_wrapper">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/icon_and_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ad_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="Icon for the ad."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry"
                        tools:srcCompat="@drawable/googleg_standard_color_18" />

                    <TextView
                        android:id="@+id/ad_title"
                        style="@style/NativeAd.AdHeadline.Light"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingTop="4dp"
                        android:maxLines="2"
                        android:paddingStart="4dp"
                        android:textColor="@color/fullscreen_ads_title_text_color"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/ad_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Test Ad : ILLEGEAR ATLAS (AMD) (AMD Ryzen" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/ad_icon"
                        app:layout_constraintTop_toBottomOf="@id/ad_title">

                        <TextView
                            android:id="@+id/ad_attribution"
                            style="@style/NativeAd.AdAttribution.Light"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@color/ad_attribution_bg"
                            android:text="@string/ad_attribution"
                            android:textColor="#ffffff"
                            app:layout_constraintStart_toStartOf="@id/icon_and_title"
                            app:layout_constraintTop_toBottomOf="@id/icon_and_title"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/ad_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:paddingHorizontal="2dp"
                            android:singleLine="false"
                            android:textColor="@color/fullscreen_ads_title_secondary_text_color"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ad_body"
                            tools:text="Google Play" />


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/ad_body"
                    style="@style/NativeAd.AdBody.Light"
                    android:maxLines="2"
                    android:paddingHorizontal="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/fullscreen_ads_title_body_text_color"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon_and_title"
                    tools:text="Penghantaran Percuma Baucar Diskaun RM15 and Penghantaran Percuma Untuk Perngguna Baharu. Beli di Shopee sekarang!" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ad_media_wrapper"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/mediaview_background"
                app:layout_constraintEnd_toStartOf="@id/ad_text_wrapper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/ad_cta"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fullscreen_ads_cta_orange_button_tint"
                android:textColor="@color/fullscreen_ads_cta_button_text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ad_row"
                tools:text="INSTALL" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:layout_gravity="center_horizontal"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_media_wrapper">

                <RatingBar
                    android:id="@+id/ad_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:isIndicator="true"
                    android:paddingBottom="8dp"

                    android:paddingEnd="8dp"
                    android:numStars="5"
                    android:paddingTop="4dp"
                    android:progressBackgroundTint="@color/fullscreen_ads_rating_bar_background_tint"
                    android:progressTint="@color/fullscreen_ads_rating_bar_tint"
                    android:rating="4.4"
                    android:secondaryProgressTint="@color/fullscreen_ads_rating_bar_secondary_tint"
                    android:stepSize="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />


                <TextView
                    android:id="@+id/ad_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fullscreen_ads_price_text_color"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textStyle="normal"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintStart_toEndOf="@id/ad_rating_bar"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="FREE" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <View
                android:id="@+id/deadRightCorner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                tools:background="#99FF0000"
                />
            <View
                android:id="@+id/deadRight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                tools:background="#99FF0000"
                />

            <View
                android:id="@+id/deadTop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                tools:background="#99FF0000"
                />

            <View
                android:id="@+id/deadBottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                tools:background="#99FF0000"
                />

            <View
                android:id="@+id/deadLeft"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                tools:background="#99FF0000"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.gms.ads.nativead.NativeAdView>
</androidx.constraintlayout.widget.ConstraintLayout>